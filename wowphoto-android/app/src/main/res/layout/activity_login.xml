<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_marginTop="25dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/login_bg">

        <ImageView
            android:id="@+id/back_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/normal_margin"
            android:layout_marginTop="15dp"
            android:src="@drawable/login_back_select_bg"/>

        <ImageView
            android:id="@+id/logo_iv"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="124dp"
            android:src="@drawable/icon_login"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logo_iv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:src="@drawable/icon_group"/>

        <TextView
            android:id="@+id/login_tv"
            android:layout_width="194dp"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="60dp"
            android:background="@drawable/navdrawer_title_tv_select_no_bg"
            android:gravity="center"
            android:text="@string/login_text"
            android:textColor="@color/login_tv_color"
            android:textSize="@dimen/large_text_size"/>

    </RelativeLayout>
</FrameLayout>